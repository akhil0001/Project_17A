{
    "name": "messenger",
    "version": "1.0",
    "description": "describes the communication between background.js and content scripts",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": ["*://www.google.com/*"],
          "js": ["content.js"]
        }
      ]
}